<Window x:Class="Lab_4.Views.ViewVegetablesInConsignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4.Classes" mc:Ignorable="d"
        Title="Vegetable Details" Height="300" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0"
                   FontSize="16" FontWeight="Bold" Margin="0,5,10,5" VerticalAlignment="Center"/>
        <TextBlock x:Name="vegetableNameTextBlock" Grid.Row="0" Grid.Column="1"
                   FontSize="16" Margin="0,5,0,5" TextWrapping="Wrap" VerticalAlignment="Center"/>

        <TextBlock Text="Country of origin:" Grid.Row="1" Grid.Column="0"
                   FontSize="16" FontWeight="Bold" Margin="0,5,10,5" VerticalAlignment="Center"/>
        <TextBlock x:Name="countryOfOriginTextBlock" Grid.Row="1" Grid.Column="1"
                   FontSize="16" Margin="0,5,0,5" TextWrapping="Wrap" VerticalAlignment="Center"/>

        <TextBlock Text="City:" Grid.Row="2" Grid.Column="0"
                   FontSize="16" FontWeight="Bold" Margin="0,5,10,5" VerticalAlignment="Center"/>
        <TextBlock x:Name="cityTextBlock" Grid.Row="2" Grid.Column="1"
                   FontSize="16" Margin="0,5,0,5" TextWrapping="Wrap" VerticalAlignment="Center"/>

        <TextBlock Text="Season:" Grid.Row="3" Grid.Column="0"
                   FontSize="16" FontWeight="Bold" Margin="0,5,10,5" VerticalAlignment="Center"/>
        <TextBlock x:Name="seasonTextBlock" Grid.Row="3" Grid.Column="1"
                   FontSize="16" Margin="0,5,0,5" VerticalAlignment="Center"/>

        <Button Content="ОК" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                Width="100" Height="35" FontSize="18" Margin="0,20,0,0"
                HorizontalAlignment="Center" Click="OkButton_Click"/>
    </Grid>
</Window>